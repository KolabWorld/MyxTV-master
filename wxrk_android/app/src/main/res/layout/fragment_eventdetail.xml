                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                            android:gravity="center_vertical"
                            android:letterSpacing="-0.09"
                            android:text="Start"
                            android:textColor="@color/text_lightwhite"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_textdate"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:fontFamily="@font/aquawax_pro_regular_alt_version"
                            android:gravity="left"
                            android:lineSpacingExtra="10dp"
                            android:text="29th July 2022"
                            android:textColor="@color/text_lightwhite"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/tv_texttime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                            android:gravity="center_vertical"
                            android:letterSpacing="-0.09"
                            android:text="End"
                            android:textColor="@color/text_lightwhite"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_textdate"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:fontFamily="@font/aquawax_pro_regular_alt_version"
                            android:gravity="left"
                            android:lineSpacingExtra="10dp"
                            android:text="12:00"
                            android:textColor="@color/text_lightwhite"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/tv_textvenu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_date"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                            android:gravity="center_vertical"
                            android:letterSpacing="-0.09"
                            android:text="Venue"
                            android:textColor="@color/text_lightwhite"
                            android:textSize="@dimen/_15sdp" />


                        <TextView
                            android:id="@+id/tv_venu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_textvenu"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="@font/aquawax_pro_regular_alt_version"
                            android:gravity="left"
                            android:letterSpacing="-0.11"
                            android:lineSpacingExtra="10dp"
                            android:text="ABC Complex"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13ssp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="@drawable/bg_bottom_nav_bar">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_brand"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@color/white"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_x"
                            app:roundPercent="0.5" />

                        <TextView
                            android:id="@+id/tv_aboutorg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:layout_toRightOf="@id/iv_brand"
                            android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                            android:gravity="center_vertical"
                            android:letterSpacing="-0.09"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:text="About Adidas"
                            android:textColor="@color/text_lightwhite"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:text="shhshsh"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:id="@+id/tv_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_brand"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/aquawax_pro_regular_alt_version"
                            android:gravity="left"
                            android:letterSpacing="-0.11"
                            android:lineSpacingExtra="10dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_visitwebsite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_des"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/bg_selectedweek"
                            android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:paddingBottom="@dimen/_10sdp"

                            android:text="VISIT WEBSITE"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp" />


                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="#1AFFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/tv_text"
                        android:layout_below="@id/iv_offerimg"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                        android:letterSpacing="-0.01"
                        android:text="EVENTS SPONSORS"
                        android:textColor="#2DBBDD"
                        android:textSize="@dimen/_13ssp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        app:spanCount="4"
                        tools:itemCount="5"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        android:id="@+id/rv_eventsponsor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintTop_toBottomOf="@id/rv_category"
                        tools:listitem="@layout/item_eventsponsor" />

                    <View
                        android:layout_marginBottom="@dimen/_50sdp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="#1AFFFFFF" />


<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_above="@id/tv_text"-->
<!--                        android:layout_below="@id/iv_offerimg"-->
<!--                        android:layout_marginLeft="@dimen/_20sdp"-->
<!--                        android:layout_marginTop="@dimen/_10sdp"-->
<!--                        android:fontFamily="@font/aquawax_pro_heavy_alt_version"-->
