                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                            android:gravity="center_vertical"
                            android:letterSpacing="-0.09"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:text="Highlight Of Event"
                            android:textColor="@color/text_lightwhite"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/tv_highlight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_higlight_ofoffer"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/aquawax_pro_regular_alt_version"
                            android:gravity="left"
                            android:letterSpacing="-0.11"
                            android:lineSpacingExtra="10dp"
                            android:paddingLeft="@dimen/_20sdp"
                            android:text="gagagashshshshshshshshshshshshakahs"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp" />



                    </RelativeLayout>

                    <View
