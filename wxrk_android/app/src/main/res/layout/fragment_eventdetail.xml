                    android:textColor="@color/text_lightwhite"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintLeft_toRightOf="@id/tv_signupcount"
                    app:layout_constraintTop_toBottomOf="@id/tv_brand_name" />

