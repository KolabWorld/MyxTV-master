<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:background="@drawable/splash_back_gradiant"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_above="@+id/rl_transection"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_left_backarrow" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_back"
                android:letterSpacing="-0.01"
                android:textColor="@color/text_lightwhite"
                android:textSize="@dimen/_25ssp"
                android:text="LEDGER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aquawax_pro_heavy_alt_version" />


            <LinearLayout
                android:id="@+id/ll_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/wallet_bg"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/iv_logo"

                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="#0E326C"
                    android:src="@drawable/ic_token_logo"
                    app:roundPercent="1" />


                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dubai_dubstep"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:text="0.24"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp"
                    app:layout_constraintLeft_toRightOf="@id/iv_user"
                    app:layout_constraintTop_toBottomOf="@id/iv_user"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>



        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/bg_bottom_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/aquawax_pro_medium_alt_version"
                android:letterSpacing="-0.01"
                android:text="From"
                android:textColor="#B3FDFDFD"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/tv_fromdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_from"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/aquawax_pro_bold_alt_version"
                android:letterSpacing="-0.01"
                android:text="Jun 2022"
                android:textColor="#FDFDFD"
                android:textSize="@dimen/_13ssp" />


            <View
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_fromdate"
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_20sdp"

                android:background="#1AFFFFFF" />

            <TextView
                android:layout_toRightOf="@id/view"
                android:id="@+id/tv_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/aquawax_pro_medium_alt_version"
                android:letterSpacing="-0.01"
                android:text="To"
                android:textColor="#B3FDFDFD"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_toRightOf="@id/view"
                android:id="@+id/tv_todate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_from"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/aquawax_pro_bold_alt_version"
                android:letterSpacing="-0.01"
                android:text="Jun 2022"
                android:textColor="#FDFDFD"
                android:textSize="@dimen/_13ssp" />


            <ImageView
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_arrow_down"/>

        </RelativeLayout>


        <TextView
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:letterSpacing="-0.01"
            android:textColor="#2DBBDD"
            android:textSize="@dimen/_14ssp"
            android:text="LIST OF TRANSACTIONS"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aquawax_pro_heavy_alt_version" />


        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:id="@+id/rv_transection"
            tools:listitem="@layout/item_transection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvemptyview"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_from"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/aquawax_pro_bold_alt_version"
            android:letterSpacing="-0.01"
            android:text="No Transaction Available."
            android:textColor="#FDFDFD"
            android:textSize="@dimen/_13ssp" />




    </LinearLayout>


</layout>