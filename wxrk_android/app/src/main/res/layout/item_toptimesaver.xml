        <LinearLayout
            android:gravity="center"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/bg_timesaver"
            android:id="@+id/ll_time"
            android:orientation="vertical">


            <TextView
                android:gravity="center"
                android:textSize="@dimen/_18sdp"
                android:id="@+id/tv_date"
                android:fontFamily="@font/dubai_dubstep_italic"
                android:textColor="@color/white"
                android:text="29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_month"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/aquawax_pro_bold_alt_version"
                android:textColor="@color/white"
                android:text="JULY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/tv_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_time"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:text="23m 15s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aquawax_pro_regular_alt_version"
            android:drawablePadding="@dimen/_5sdp" />

        <TextView
            android:id="@+id/tv_percentage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_time"
            android:drawableLeft="@drawable/ic_up_arrow_green"
            android:textColor="@color/green"
            android:textSize="@dimen/_12ssp"
            android:text="20%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aquawax_pro_heavy_alt_version"
            android:drawablePadding="@dimen/_5sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>