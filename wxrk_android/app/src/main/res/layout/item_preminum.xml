<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tital"
            android:layout_marginTop="@dimen/_10sdp"
            android:letterSpacing="-0.01"
            android:textColor="@color/text_lightwhite"
            android:textSize="@dimen/_14ssp"
            android:text="FEATURED PRODUCTS"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aquawax_pro_heavy_alt_version" />

        <TextView
            android:letterSpacing="-0.01"
            android:textColor="#4dFDFDFD"
            android:textSize="@dimen/_12ssp"
            android:text="Redeem your tokens"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aquawax_pro_medium_alt_version" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_offer"
            tools:itemCount="2"
            tools:listitem="@layout/item_offers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</layout>