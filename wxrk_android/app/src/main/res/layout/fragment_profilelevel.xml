<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/splash_back_gradiant"
            android:layout_height="match_parent">



            <TextView
                android:layout_marginTop="@dimen/_30sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:letterSpacing="-0.01"
                android:textColor="@color/text_lightwhite"
                android:textSize="@dimen/_28ssp"
                android:text="LEVELS"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aquawax_pro_heavy_alt_version" />


            <LinearLayout
                android:id="@+id/ll_wallet"
                android:layout_marginTop="@dimen/_30sdp"

                android:gravity="center"
                android:background="@drawable/wallet_bg"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    app:roundPercent="1"

                    android:background="#0E326C"
                    android:src="@drawable/ic_token_logo"
                    android:id="@+id/iv_logo"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp" />


                <TextView
                    android:fontFamily="@font/dubai_dubstep"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@id/iv_user"
                    app:layout_constraintLeft_toRightOf="@id/iv_user"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp"
                    android:text="0.24"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <androidx.constraintlayout.utils.widget.ImageFilterView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_wallet"
                android:layout_width="@dimen/_44sdp"
                android:layout_height="@dimen/_44sdp"
                app:srcCompat="@mipmap/ic_launcher"
                app:roundPercent="1"
                android:layout_marginTop="@dimen/_40sdp"
                android:id="@+id/iv_user" />


            <View
                android:id="@+id/view"
                app:layout_constraintBottom_toTopOf="@+id/iv_animation"
                app:layout_constraintWidth_percent="0.3"
                android:layout_marginTop="@dimen/_40sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                android:layout_height="@dimen/_7sdp"
                android:background="@drawable/bg_profile_level"/>

            <TextView
                android:id="@+id/tv_level"
                android:textColor="#B3FDFDFD"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                android:textSize="@dimen/_14sdp"
                android:text="Level 1"
                app:layout_constraintTop_toBottomOf="@id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

                <TextView
                    android:id="@+id/tv_levelname"
                android:textColor="@color/text_lightwhite"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                android:textSize="@dimen/_25sdp"
                android:text="AMATEUR"
                app:layout_constraintTop_toBottomOf="@id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                app:layout_constraintEnd_toStartOf="@id/iv_animation"
                app:layout_constraintTop_toBottomOf="@id/tv_levelname"
                app:layout_constraintStart_toStartOf="@id/tv_levelname"
                android:layout_marginLeft="@dimen/_20sdp"
                android:id="@+id/tv_description"
                android:textColor="#B3FDFDFD"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/aquawax_pro_medium_alt_version"
                android:textSize="@dimen/_10sdp"
                android:text="Blocto is your key to earn\nrewards watching your\nfavorite streamer!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView

                android:layout_marginRight="@dimen/_20sdp"
                app:layout_constraintRight_toLeftOf="@id/iv_animation"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/tv_time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_description"
                android:textColor="#2DBBDD"
                android:textSize="@dimen/_14ssp"
                android:text="You need 18h :\n 12m for level 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aquawax_pro_bold_alt_version"
                android:drawablePadding="@dimen/_5sdp" />




            <ImageView
                android:id="@+id/iv_animation"
                android:layout_marginRight="-100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_bottomimage"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>