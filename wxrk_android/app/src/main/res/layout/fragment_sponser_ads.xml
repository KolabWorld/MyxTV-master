<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_back_gradiant"
        tools:context=".MainActivity">


       <com.google.android.exoplayer2.ui.PlayerView
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:id="@+id/video_view"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

<!--        &lt;!&ndash; activity_player.xml&ndash;&gt;-->
<!--        <com.google.android.exoplayer2.ui.SimpleExoPlayerView-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            android:id="@+id/simpleplayer"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"/>-->
        <VideoView
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/videoview"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"/>

        <ImageView
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



        <ImageView
            android:id="@+id/iv_back"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_video_backbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:visibility="gone"
            android:id="@+id/tv_timeleft"
            android:paddingRight="@dimen/_20sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/text_lightwhite"
            android:background="@drawable/timeleft_sponserbg"
            android:fontFamily="@font/aquawax_pro_heavy_alt_version"
            android:textSize="@dimen/_16ssp"
            android:text="00:45s left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

