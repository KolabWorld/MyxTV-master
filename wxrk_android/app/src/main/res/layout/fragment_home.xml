<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.wxrk.viewmodels.HomeViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiprefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_back_gradiant"
            tools:context=".MainActivity">


            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedscrool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_40sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true">


                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:id="@+id/iv_user"
                        android:layout_width="@dimen/_44sdp"
                        android:layout_height="@dimen/_44sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/ll_wallet"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ll_wallet"
                        app:roundPercent="1"
                        app:srcCompat="@drawable/ic_x" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_vuesax_bulk_crown"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                        android:text="Level 1"
                        android:textColor="@color/text_lightwhite"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/iv_user"
                        app:layout_constraintLeft_toRightOf="@id/iv_user"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/ll_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/wallet_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/iv_logo"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:background="#0E326C"
                            android:src="@drawable/ic_token_logo"
                            app:roundPercent="1" />


                        <TextView
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/dubai_dubstep"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="0.24"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20ssp"
                            app:layout_constraintLeft_toRightOf="@id/iv_user"
                            app:layout_constraintTop_toBottomOf="@id/iv_user"
                            app:layout_constraintTop_toTopOf="parent" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_texttodaysidealtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                        android:text="@string/today_s_ideal_time"
                        android:textColor="#4dFDFDFD"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_user" />


                    <TextView
                        android:id="@+id/tv_clock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dubai_dubstep_italic"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="00:01:28"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_50ssp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_texttodaysidealtime"
                        app:layout_constraintWidth_percent="0.85" />

                    <TextView
                        android:id="@+id/tv_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                        android:text="@string/hours"
                        android:textColor="#4dFDFDFD"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintLeft_toLeftOf="@id/tv_clock"
                        app:layout_constraintTop_toBottomOf="@id/tv_clock" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                        android:text="@string/sec"
                        android:textColor="#4dFDFDFD"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintRight_toRightOf="@id/tv_clock"
                        app:layout_constraintTop_toBottomOf="@id/tv_clock" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                        android:text="@string/min"
                        android:textColor="#4dFDFDFD"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_clock" />

                    <LinearLayout
                        android:id="@+id/ll_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_hours">


                        <LinearLayout
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_selectedweek"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/_2sdp"
                                android:src="@drawable/ic_flash_circle" />


                            <TextView
                                android:id="@+id/tv_viewmore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:drawablePadding="@dimen/_5sdp"
                                android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                                android:letterSpacing="-0.05"
                                android:paddingTop="@dimen/_7sdp"
                                android:paddingRight="@dimen/_16sdp"
                                android:paddingBottom="@dimen/_7sdp"
                                android:text="@string/insights"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_hours" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_intro"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_info_circule" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_text">


                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/animationView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:scaleType="centerCrop"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/dashboard_animation" />

                        <TextView
                            android:id="@+id/tvwatchtoearn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:background="@drawable/bg_watchtoearn"
                            android:gravity="center"
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_12sdp"
                            android:text="Watch to Earn"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="TAP TO WATCH"
                            android:textColor="#35C6D5"
                            android:textSize="@dimen/_10ssp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_sponserads"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvlastsevendaytxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                            android:letterSpacing="-0.01"
                            android:text="@string/top_time_savers"
                            android:textColor="@color/text_lightwhite"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_lastsynchtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:fontFamily="@font/aquawax_pro_medium_alt_version"
                            android:letterSpacing="-0.01"
                            android:text="Updated at 4:16pm"
                            android:textColor="#4dFDFDFD"
                            android:textSize="@dimen/_10ssp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_toptimesaver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_premium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:itemCount="2"
                            tools:listitem="@layout/item_preminum" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/aquawax_pro_heavy_alt_version"
                            android:letterSpacing="-0.01"
                            android:text="@string/upcoming_events"
                            android:textColor="@color/text_lightwhite"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:fontFamily="@font/aquawax_pro_medium_alt_version"
                            android:letterSpacing="-0.01"
                            android:text="RSVP events"
                            android:textColor="#4dFDFDFD"
                            android:textSize="@dimen/_12ssp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_upcomingevent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_150sdp"
                            tools:itemCount="2"
                            tools:listitem="@layout/item_event" />


                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>