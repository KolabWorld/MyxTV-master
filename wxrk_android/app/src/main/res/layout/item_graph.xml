<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/_10sdp"
        android:id="@+id/myclayout"
        android:layout_height="@dimen/_240sdp">



        <FrameLayout
            app:layout_constraintBottom_toTopOf="@+id/tvday"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_300sdp"
          app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:progressDrawable="@drawable/progressdrawable"
            android:theme="@style/CustomProgressBarTheme"
            android:id="@+id/id_progressbar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="10"
            android:rotation="270" />

    </FrameLayout>
        <TextView

            android:background="#FF053E71"
            android:gravity="center"
            android:layout_width="@dimen/_25sdp"
            android:id="@+id/tvday"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/aquawax_pro_medium_alt_version"
            android:text="M"
            android:textColor="@color/text_lightwhite70"
            android:layout_height="@dimen/_15sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>